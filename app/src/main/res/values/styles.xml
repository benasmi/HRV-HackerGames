<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!--Error label text style-->
    <style name="MyErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!--Input field style-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <!--Error label text style-->
    <style name="MyErrorText1" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!--Input field style-->
    <style name="MyEditText1" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>


    <style name="AppThemeDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:background">@drawable/alert_dialog_background</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <!-- No action bar. -->
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="Widget"/>

    <style name="Widget.ScannerSubtitle">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textColor">@drawable/button_colors</item>
    </style>

    <style name="MyDatePickerSpinnerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>

        <item name="colorControlNormal">#F62459</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColorPrimary">#fff</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="IpulsusButton">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/login_button_gradient</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
