<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="com.mabe.productions.hrv_madison.initialInfo.IntroInitialGender">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_what_gender"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="35dp"
        android:layout_marginTop="40dp"
        android:id="@+id/txt_what_is_your_gender"/>


    <Button
        android:layout_width="368dp"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:text="@string/initial_continue_btn"
        android:onClick="start"
        style="@style/IpulsusButton"
        android:textAllCaps="false"
        android:id="@+id/initial_btn_continue_gender"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="0px"
            android:layout_height="200dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:id="@+id/male_icon"
            android:padding="40dp"
            android:src="@drawable/ic_male"
            android:paddingLeft="30dp"/>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fff"
            android:id="@+id/initial_img_divider"
            android:rotation="15"/>
        <ImageView
            android:layout_width="0px"
            android:layout_height="200dp"
            android:padding="40dp"
            android:id="@+id/female_icon"
            android:paddingRight="30dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@drawable/ic_female"/>
    </LinearLayout>


</RelativeLayout>
