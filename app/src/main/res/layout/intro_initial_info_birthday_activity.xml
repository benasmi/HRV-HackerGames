<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="com.mabe.productions.pr_ipulsus_running.initialInfo.IntroInitialInfoBirthday">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/initial_when_is_your_birthday"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="35dp"
        android:layout_marginTop="40dp"
        android:id="@+id/txt_when_is_your_birthday"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        >

        <DatePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:theme="@style/MyDatePickerSpinnerStyle"
            android:id="@+id/datePicker"
            android:datePickerMode="spinner"></DatePicker>



    </LinearLayout>


    <Button
        android:layout_width="368dp"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:text="@string/initial_continue_btn"
        android:onClick="start"
        style="@style/IpulsusButton"
        android:id="@+id/initial_btn_continue_birthday"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
