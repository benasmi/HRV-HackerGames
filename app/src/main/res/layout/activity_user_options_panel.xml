<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/userpanel_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2c3e50"
        android:elevation="4dp"
        >



        <ImageView
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:id="@+id/img_back_arrow"
            android:layout_marginRight="30dp"
            android:src="@drawable/ic_back_arrow"/>


        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="User options"
            android:layout_gravity="left"
            android:textColor="#FFF"
            android:gravity="left"
            android:textSize="18dp"
            android:id="@+id/toolbar_title_measurement" />

    </android.support.v7.widget.Toolbar>

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#003e5266"
        android:layout_alignParentBottom="true"
        android:text="@string/logout"
        android:id="@+id/btn_logout"
        android:onClick="logout"
        android:layout_marginBottom="25dp"
        android:textSize="13dp"
        android:textColor="#F62459"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userpanel_toolbar"
        android:orientation="vertical"
        >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Update information"
               android:layout_margin="10dp"
               android:textSize="20dp"
               android:textColor="@color/white"/>
           <ImageView
               android:layout_width="200dp"
               android:layout_height="1dp"
               android:background="@color/white"/>

           <Button
               android:layout_width="wrap_content"
               android:layout_height="35dp"
               android:background="#003e5266"
               android:text="Change workout days"
               android:layout_marginLeft="10dp"
               android:onClick="changeWorkoutDays"
               android:textAllCaps="false"
               android:textSize="13dp"
               android:id="@+id/btn_update_workout_days"
               android:textColor="#F62459"
               />
           <Button
               android:layout_width="wrap_content"
               android:layout_height="35dp"
               android:background="#003e5266"
               android:text="Change height"
               android:layout_marginLeft="10dp"
               android:onClick="changeHeight"
               android:textAllCaps="false"
               android:textSize="13dp"
               android:id="@+id/btn_update_height"
               android:textColor="#F62459"
               />
           <Button
               android:layout_width="wrap_content"
               android:layout_height="35dp"
               android:background="#003e5266"
               android:text="Change weight"
               android:layout_marginLeft="10dp"
               android:onClick="changeWeight"
               android:textAllCaps="false"
               android:textSize="13dp"
               android:id="@+id/btn_update_weight"
               android:textColor="#F62459"
               />


       </LinearLayout>

    </LinearLayout>


</RelativeLayout>